<MudDialog >
    <DialogContent>
        <div class="d-flex flex-row">
            @if (Elements.Any())
            {
                <MudDataGrid Items="@Elements" Style="height: 500px; width: 100%" Virtualize="true" Height="500px">
                <Columns>
                    <PropertyColumn Property="x => x.VacationRequestId" Title="Id" />
                    <PropertyColumn Property="x => x.UserId" />
                        <PropertyColumn Property="x => x.StartDate" Format="d" />
                        <PropertyColumn Property="x => x.EndDate" Format="d" />
                    <PropertyColumn Property="x => x.Reason" Title="Reason" />
                </Columns>
                </MudDataGrid>

            } else
            {
                <h1>No elements</h1>
            }
        </div>
    </DialogContent>
    <DialogActions>
        <MudDateRangePicker Label="Vacation Request" Clearable="true" PlaceholderStart="Start Date" PlaceholderEnd="End Date" />
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

